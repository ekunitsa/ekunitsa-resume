{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "next.config.mjs",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "**/*.js",
        "./.next/types/**/*.ts"
    ],
    "exclude": ["node_modules", ".next", ".vercel", "out"]
}
